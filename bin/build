#!/usr/bin/env bash

set -e

TAG=conjur-authn-k8s-client:dev
VERSION=$(< VERSION)

echo "---"
echo "Building conjur-authn-k8s-client with tag ${TAG} <<"

docker build --tag "${TAG}" \
             --target "authenticator-client" \
             .

docker build --tag "${TAG}-redhat" \
             --build-arg VERSION="$VERSION" \
             --target "authenticator-client-redhat" \
             .

echo "---"
